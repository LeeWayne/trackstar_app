<h3>Comment</h3>
<em><%= comment.body %></em><br>
by <i><%= comment.user.name %>&nbsp;&middot;&nbsp;<%= time_ago_in_words(comment.created_at) %>&nbsp;ago</i>
<% if can? :admin, Report %><br>
This comment has  <%= comment.reports.count %> reports
<% end %>

<br>

  <%= link_to 'Delete comment', [@track, comment], method: :delete if can? :destroy, comment %><br>

  <%= link_to 'Edit', edit_track_comment_path(@track, comment) %><br>
  <% if can? :report, comment %>
    <%= link_to 'Report comment', track_comment_reports_path(@track, comment), method: :post %> 
  <% end %>


 